#!/bin/sh

col_gray1="#2e3440"
col_gray2="#444444"
col_gray3="#bbbbbb"
col_gray4="#4c566a"
col_red="#BF616A"


termcmd="alacritty -e" 
test -s $HOME/.dmenurc && . $HOME/.dmenurc 
cmd="$(dmenu_path | dmenu -m -1 -nb $col_gray1 -nf $col_gray3 -sb $col_red -sf $col_gray4 -p "Run Î»" -l 10 $@)" 
case $cmd in 
	*\@ ) brave-browser "https://www.google.com/search?q=$(echo $cmd | sed 's/\(.*\)@/\1 /')";;
    *\! ) ${termcmd} "$(printf "%s" "${cmd}" | cut -d'!' -f1)";;
	* ) ${cmd} ;; 
esac 
exit
